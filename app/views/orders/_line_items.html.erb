<tr>
  <td>
    <%= image_tag product.image.tiny.url %>
  </td>
  <td>
  <h4><%= product.name %></h4>
  <br>
  <p><%= product.description %></p>
  </td>
  
  <td class="priceShown">
    <%=number_to_currency(item_price) %>
  </td>
  
  <td >
    <%= quantity %>
    </td>
    <td class="priceShown">
      <%= number_to_currency(item_price *  quantity) %>
    </td>
</tr>
